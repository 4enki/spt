* {
  box-sizing: border-box;
  padding: 0;
  margin: 0;
  text-size-adjust: none;
}

body {
  font-family: $GeneralFontFamily;
  background: $BodyBackground;
  font-size: 15px;
  line-height: 1.58;
  font-weight: 400;
}

body {
  display: flex;
  min-height: 100vh;
  flex-direction: column;
}
main {
  flex: 1;
}
